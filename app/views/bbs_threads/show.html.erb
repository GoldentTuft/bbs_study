<h1>BbsThreads#show</h1>

<%= @bbs_thread.content %>

<div>
  <% if current_user?(@bbs_thread.user) %>
    <%= link_to "delete", @bbs_thread, method: :delete,
      data: { confirm: "You sure?" } %>
  <% end %>
</div>

<% if @all_posts %>
  <%= will_paginate @all_posts %>
  <ul class="all_posts">
    <%= render @all_posts %>
  </ul>
  <%= will_paginate @all_posts %>
<% end %>

<div>
  <%= form_for(@user_post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div><%= hidden_field_tag :bbs_thread_id, @bbs_thread.id %></div>
    <div class="field">
      <%= f.text_area :content, placeholder: "content" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>
