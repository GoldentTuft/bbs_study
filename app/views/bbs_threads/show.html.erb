<h1>BbsThreads#show</h1>

<div class="bbs_thread">
  <div>
    <%= @bbs_thread.content %>
    
    <span class="timestamp"><%= time_text(@bbs_thread.created_at) %></span>
    
    <span class="delete_link">
      <% if current_user?(@bbs_thread.user) %>
        <%= link_to "delete", @bbs_thread, method: :delete,
          data: { confirm: "You sure?" } %>
      <% end %>
    </span>
  </div>


  <% if @all_posts %>
    <%= will_paginate @all_posts %>
    <ol>
      <%= render @all_posts %>
    </ol>
    <%= will_paginate @all_posts %>
  <% end %>
  
  <div>
    <%= form_for(@bbs_post) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div><%= hidden_field_tag :bbs_thread_id, @bbs_thread.id %></div>
      <% unless @user %>
        <%= f.label "名前" %>
        <%= f.text_field :name, class: 'form-control' %>
      <% end %>
      
      <%= f.label "本文" %>
      <%= f.text_area :content, class: 'form-control'  %>
      
      <% unless @user %>
        <%= f.label "削除パス" %>
        <%= f.text_field :password, class: 'form-control' %>
      <% end %>
  
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>